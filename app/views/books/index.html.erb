 <h1>Books</h1>
  <table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <td colspan=3></td>
     </tr>
    </thead>
    
    <tbody>
     <% @books.each do |book| %>
      <tr>
       <td><%= book.Title %></td>
       <td><%= book.Body %></td>
       <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
     <% end %>
    </tbody>
  </table>

<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@book, url: '/books') do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :Title %>
 
    <h4>Body</h4>
    <%= f.text_area :Body %>
 
    <%= f.submit 'Create Book' %>

<% end %>